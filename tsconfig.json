{
	"compilerOptions": {
		"strict": true,
		"target": "ES2021",
		"module": "ESNext",
		"lib": ["ES2021", "DOM"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noEmit": true,
		"skipLibCheck": true,
		"noErrorTruncation": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["dist", "**/node_modules", "**/.*/"]
}
