{
	"name": "valia",
	"version": "4.0.10",
	"description": "Validation library for TypeScript and JavaScript.",
	"homepage": "https://github.com/x-keyscore/valia#readme",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/types.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/types.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"scripts": {
		"start": "rollup -c && node ./dist",
		"clean": "rm -rf ./dist",
		"build": "npm run clean && rollup -c",
		"test": "npm run build && node --test",
		"clean:win": "rd /s /q dist",
		"build:win": "npm run clean:win && rollup -c",
		"test:win": "npm run build:win && node --test"
	},
	"keywords": [
		"validator",
		"data-validator",
		"runtime-validator",
		"validation",
		"data-validation",
		"runtime-validation",
		"javascript",
		"javascript-validator",
		"typescript",
		"typescript-validator"
	],
	"author": "x-keyscore",
	"license": "ISC",
	"devDependencies": {
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/node": "^22.10.5",
		"rollup": "^4.39.0",
		"rollup-plugin-dts": "^6.2.1",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"tslib": "^2.8.1"
	}
}
