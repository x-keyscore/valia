{
	"name": "valia",
	"version": "3.1.1",
	"description": "A runtime data validator in TypeScript with advanced type inference, built-in validation functions, and seamless integration for server and client environments.",
	"homepage": "https://github.com/x-keyscore/valia#readme",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/types.d.ts",
	"scripts": {
		"start": "rollup -c && node ./dist",
		"clean": "rm -rf ./dist",
		"build": "npm run clean && rollup -c",
		"test": "npm run build && node --test",
		"clean:win": "rd /s /q dist",
		"build:win": "npm run clean:win && rollup -c",
		"test:win": "npm run build:win && node --test"
	},
	"keywords": [
		"validator",
		"validation",
		"data-validation",
		"runtime-validation",
		"type-safety",
		"type-checking",
		"type-validation",
		"typescript",
		"typescript-validator",
		"type-guard"
	],
	"author": "x-keyscore",
	"license": "ISC",
	"devDependencies": {
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/node": "^22.10.5",
		"rollup": "^4.39.0",
		"rollup-plugin-dts": "^6.2.1",
		"typescript": "^5.8.3"
	}
}
